{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Solve default",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Solve using thesaurus",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "program": "${workspaceFolder}/src/main.py",
            "args": [
                "--wordlist=../dictionaries/ca_ES/dictionaries/th_ca_ES_v3",
                "--use-thesaurus"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Play",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "program": "${workspaceFolder}/src/main.py",
            "args": [
                "--play"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Play using thesaurus",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "program": "${workspaceFolder}/src/main.py",
            "args": [
                "--wordlist=../dictionaries/ca_ES/dictionaries/th_ca_ES_v3",
                "--use-thesaurus",
                "--play"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Current File",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}